        <loc>{{ request.url_root.rstrip('/') }}</loc>
        <lastmod>{{ now.strftime('%Y-%m-%d') }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
    </url>
    <url>
        <loc>{{ request.url_root.rstrip('/') }}/team</loc>
